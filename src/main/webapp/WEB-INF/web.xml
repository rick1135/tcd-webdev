<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    
    <context-param>
        <param-name>
            javax.faces.WEBAPP_RESOURCES_DIRECTORY
        </param-name>
        <param-value>
            /WEB-INF/resources
        </param-value>
    </context-param>
    
   <context-param>
        <param-name>primefaces.PUBLIC_CAPTCHA_KEY</param-name>
        <param-value>6Lfc_iopAAAAABPpTPVyxbDn3o27tZ-8FMTnBzqL</param-value>
    </context-param>
    
    <context-param>
        <param-name>primefaces.PRIVATE_CAPTCHA_KEY</param-name>
        <param-value>6Lfc_iopAAAAAJbHN0ywTj1ozy1zNk7DVWVn_gYT</param-value>
    </context-param>
    
    <context-param>
        <param-name>x.API_KEY</param-name>
        <param-value>ppX0GDcGNQTZvJp90JIRdKJgF</param-value>
    </context-param>
    
    <context-param>
        <param-name>x.API_SECRET</param-name>
        <param-value>2PNgIopvNxxpUVmHKfSZPQo5qvSU6CNHAGQhG4v3Vk8p1LcX6k</param-value>
    </context-param>
    
    <context-param>
        <param-name>x.TWITTER_ACCESS_TOKEN</param-name>
        <param-value>1733245989794807808-RNLnRmNuFNMkSpuUWv668YEC0S4mBk</param-value>
    </context-param>
    
    <context-param>
        <param-name>x.TWITTER_ACCESS_TOKEN_SECRET</param-name>
        <param-value>TJkP2PMgtUm9x4PdK7ccG6zINoS4MjCLOIJLqO5jvwyKJ</param-value>
    </context-param>
    
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    
    <security-role>
        <description>System administrator</description>
        <role-name>Administrador</role-name>
    </security-role>
    
    <security-role>
        <description>Common authenticated user</description>
        <role-name>Candidato</role-name>
    </security-role>
    
    <security-role>
        <description>Common authenticated editor</description>
        <role-name>Editor</role-name>
    </security-role>
    
    <security-constraint>
        <display-name>Admin Role</display-name>
        <web-resource-collection>
            <web-resource-name>All App Pages</web-resource-name>
            <url-pattern>/app/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>Administrador</role-name>
        </auth-constraint>
    </security-constraint>
    
    <security-constraint>
        <display-name>User Role</display-name>
        <web-resource-collection>
            <web-resource-name>Página do Participante</web-resource-name>
            <url-pattern>/app/participante.xhtml</url-pattern>
            <web-resource-name>Detalhes newsletter</web-resource-name>
            <url-pattern>/app/publicacaoDetail.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>Administrador</role-name>
            <role-name>Candidato</role-name>
        </auth-constraint>
    </security-constraint>
    
    <security-constraint>
        <display-name>Editor Role</display-name>
        <web-resource-collection>
            <web-resource-name>Publicações</web-resource-name>
            <url-pattern>/app/novaPublicacao.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>Administrador</role-name>
            <role-name>Editor</role-name>
        </auth-constraint>
    </security-constraint>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.xhtml</welcome-file>
    </welcome-file-list>
    
    <error-page>
        <error-code>403</error-code>
        <location>/WEB-INF/forbidden.xhtml</location>
    </error-page>
</web-app>
